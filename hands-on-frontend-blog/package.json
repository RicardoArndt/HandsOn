{
  "name": "hands-on-frontend-blog",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server --ignore=node_modules/*",
    "start": "npm-run-all --parallel watch:sass devserver",

    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css static/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "copy:fonts": "copyfiles --up 1 static/fonts/* css/",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css copy:fonts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.9",
    "concat": "^1.0.3",
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0"
  }
}
